{
  "name": "@robinblomberg/http-client",
  "version": "0.2.3",
  "author": "Robin Blomberg",
  "type": "module",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@robinblomberg/stream": "^0.1.3",
    "@robinblomberg/url": "^0.7.4"
  },
  "devDependencies": {
    "@robinblomberg/eslint-config-robinblomberg": "^0.2.16",
    "@robinblomberg/test": "^0.5.6",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2"
  },
  "scripts": {
    "compile": "rimraf dist && tsc",
    "dev": "nodemon --watch . --exec \"concurrently \\\"node ./index.test.js\\\" tsc\"",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "eslint \"**/*.{js,ts}\" --fix",
    "pre-commit": "concurrently --kill-others-on-fail \"npm run test\" eslint",
    "test": "node ./index.test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run compile && npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "cross-env CI=true eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobinBlomberg/http-client.git"
  },
  "bugs": {
    "url": "https://github.com/RobinBlomberg/http-client/issues"
  },
  "homepage": "https://github.com/RobinBlomberg/http-client"
}
